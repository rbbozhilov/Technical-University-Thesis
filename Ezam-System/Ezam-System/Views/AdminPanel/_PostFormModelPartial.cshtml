@model PostFormModel

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<p class="h1" style="text-align:center;">Добавяне/Промяна на публикация</p>
<br />
<br />

<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12 ">

        <form method="post">
            <div class="form-group">
                <label asp-for="FullName">Име на публикуващия</label>
                <input asp-for="FullName" type="text" class="form-control">
                <span asp-validation-for="FullName" class="small text-danger"> </span>
            </div>


            <div class="form-group">
                <label asp-for="Message">Съобщение</label>
                <textarea asp-for="Message" type="text" class="form-control"> </textarea>
                <span asp-validation-for="Message" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="DateTime">Дата и час на публикуване</label>
                <input asp-for="DateTime" type="datetime-local" class="form-control">
                <span asp-validation-for="DateTime" class="small text-danger"> </span>
            </div>

            <br />
            <button type="submit" class="btn btn-primary">Запиши</button>
        </form>
    </div>
</div>
