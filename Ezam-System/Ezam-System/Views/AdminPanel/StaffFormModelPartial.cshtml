@model StaffFormModel

<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<div>
    <img class="center" src="https://www.maggi.co.uk/sites/default/files/styles/maggi_desktop_image_style/public/NUK1265%20maggi%20Recipes%20banner%201500x700px%20opt2A.jpg?h=4f5b30f1&itok=DcsF1RwA">
</div>
<br />
<br />

<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12 ">

        <form method="post">
            <div class="form-group">
                <label asp-for="FullName">Име</label>
                <input asp-for="FullName" type="text" class="form-control">
                <span asp-validation-for="FullName" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Position">Работна позиция</label>
                <textarea asp-for="Position" type="text" class="form-control"> </textarea>
                <span asp-validation-for="Position" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Office">Кабинет</label>
                <textarea asp-for="Office" type="text" class="form-control"> </textarea>
                <span asp-validation-for="Office" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Телефонен номер</label>
                <textarea asp-for="PhoneNumber" type="text" class="form-control"> </textarea>
                <span asp-validation-for="PhoneNumber" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Имейл адрес</label>
                <textarea asp-for="Email" type="text" class="form-control"> </textarea>
                <span asp-validation-for="Email" class="small text-danger"> </span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Линк за снимка ( Url )</label>
                <input asp-for="ImageUrl" type="text" class="form-control" id="input3">
                <span asp-validation-for="ImageUrl" class="small text-danger"> </span>
            </div>

            <br />
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
